<!DOCTYPE html>
<html>

<head>
    <meta charset="utf-8">
       
    <title><%= title %></title>
    
  <link rel="stylesheet" type="text/css" href="/stylesheets/easyUI/themes/default/easyui.css">
  <link rel="stylesheet" type="text/css" href="/stylesheets/easyUI/themes/icon.css">
  <link rel="stylesheet" type="text/css" href="/stylesheets/easyUI/demo.css">
  <script type="text/javascript" src="/javascripts/easyUI/jquery.min.js"></script>
  <script type="text/javascript" src="/javascripts/easyUI/jquery.easyui.min.js"></script>
</head>
  
<body class="easyui-layout">

<div data-options="region:'west',split:true" style="width:400px"> 
  <div class="easyui-layout" data-options="fit:true">
    <div data-options="region:'north', collapsible: false, split:true" style="height:400px;padding:5px">
      <div id="elementsTabs" class="easyui-tabs">
        <div title="LUN" style="padding:10px">
          <ul id="lun" data-options="checkbox:true"></ul>
            <SCRIPT type="text/javascript">
              $('#lun').tree({
               data:[{
                     "id":1,
                     "text":"SP A",
                     "children":[{
                          "text":"Port 0",
                          },{
                          "text":"Port 1",
                          },{
                          "text":"Port 2",
                          },{
                          "text":"Port 3",
                          },{
                          "text":"Port 4",
                          }]
                    },{
                    "id":2,
                         "text":"SP B",
                         "children":[{
                         "text":"Port 0"
                         },{
                         "text":"Port 1"
                         },{
                         "text":"Port 2",
                         },{
                         "text":"Port 3",
                         },{
                         "text":"Port 4",
                         }]
                    }]
             });
            </SCRIPT>
        </div>
        <div title="Storage Pool" style="padding:10px">
          <ul id="pool" data-options="checkbox:true"></ul>
            <SCRIPT type="text/javascript">
              $('#pool').tree({
               data:[{
                     "id":1,
                     "text":"Folder1",
                     "iconCls":"icon-save",
                     "children":[{
                           "text":"File1",
                           "checked":true
                           },{
                           "text":"Books",
                           "state":"open",
                           "attributes":{
                             "url":"/demo/book/abc",
                             "price":100
                           },
                           "children":[{
                             "text":"PhotoShop",
                             "checked":true
                           },{
                           "id": 8,
                           "text":"Sub Bookds",
                           "state":"closed"
                         }]
                         }]
                    },{
                         "text":"Languages",
                         "state":"closed",
                         "children":[{
                         "text":"Java"
                         },{
                         "text":"C#"
                         }]
                    }]
             });
            </SCRIPT>
        </div>
        <div title="SP" style="padding:10px">
          <ul id="SP" data-options="checkbox:true"></ul>
            <SCRIPT type="text/javascript">
              $('#SP').tree({
               data:<%- Sptree %>
             });
            </SCRIPT>
        </div>
      </div>
 
    </div>

    <div data-options="region:'center'" title="Attributes" style="padding:5px">
        <ul id="attr" data-options="checkbox:true"></ul>
            <SCRIPT type="text/javascript">
              $('#attr').tree({
               data:[{
                     "id":1,
                     "text":"Folder1",
                    },{
                      "text":"Languages",
                    },{
                      "text":"..."
                    }]
              });

                function getChecked(){
                  var nodes = $('#attr').tree('getChecked');
                  var s = '';
                  for(var i=0; i<nodes.length; i++){
                    if (s != '') s += ',';
                    s += nodes[i].text;
                  }
                  alert(s);
                }

            </SCRIPT>
    </div>
  </div>
</div>

<div data-options="region:'center'" title="Charts">
  <p> SPTree: <%= Sptree %> </p>
  <p> PoolTreeJSON: <%= JSON.stringify(Pooltree) %> </p>
  <p> LunTree: <%= JSON.stringify(Luntree) %> </p>           
</div>


</body>

</html>